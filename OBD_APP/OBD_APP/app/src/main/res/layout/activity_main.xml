<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity"
    >

    <!--Display whether bluetooth is available or not-->

    <!--On Button-->

    <!--Get list of paired devices button-->

    <!--Show paired devices here-->

    <Button
        android:id="@+id/carState"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="250dp"
        android:text="Vacant"
        android:textSize="24sp"
        android:textColor="#EA0000"
        android:background="@drawable/ripple_sample"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/upBack_Fig"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/rounded_rectangle_upback"/>

    <TextView
        android:id="@+id/connectState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:text="OBDII State:"
        android:textSize="28sp"
        android:textColor="#EA0000"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/connectStateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="200dp"
        android:text="@string/disconnected"
        android:textSize="28sp"
        android:textColor="#EA0000"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/downBack_Fig"
        android:layout_width="400dp"
        android:layout_height="480dp"
        android:layout_below="@+id/upBack_Fig"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/rounded_rectangle_downback"/>

    <ImageView
        android:id="@+id/tempBack_Fig"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/upBack_Fig"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/icon_orange_circle"/>
    <ImageView
        android:id="@+id/temp_Fig"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:layout_below="@+id/upBack_Fig"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/icon_watertank" />
    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upBack_Fig"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:text="Coolant: "
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tempTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="180dp"
        android:text=""
        android:textColor="#BB5E00"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="270dp"
        android:text="Â°C"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/speedBack_Fig"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/tempBack_Fig"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/icon_orange_circle"/>
    <ImageView
        android:id="@+id/speed_Fig"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/tempBack_Fig"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="48dp"
        android:src="@drawable/icon_speed"/>
    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempBack_Fig"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:text="Speed: "
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/speedTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speed"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="180dp"
        android:text=""
        android:textColor="#9F5000"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speed"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="270dp"
        android:text="km/h"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/rpmBack_Fig"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/speedBack_Fig"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/icon_orange_circle"/>
    <ImageView
        android:id="@+id/rpm_Fig"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/speedBack_Fig"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="48dp"
        android:src="@drawable/icon_rpm"/>
    <TextView
        android:id="@+id/rpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speedBack_Fig"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:text="Revs: "
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/rpmTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rpm"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="160dp"
        android:text=""
        android:textColor="#9F5000"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rpm"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="270dp"
        android:text="rpm"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/O2Back_Fig"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/rpmBack_Fig"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/icon_orange_circle"/>
    <ImageView
        android:id="@+id/O2_Fig"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/rpmBack_Fig"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="48dp"
        android:src="@drawable/icon_o2"/>
    <TextView
        android:id="@+id/O2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rpmBack_Fig"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:text="O2: "
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/O2Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/O2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="180dp"
        android:text=""
        android:textColor="#9F5000"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/O2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="270dp"
        android:text="V"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/mafBack_Fig"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/O2Back_Fig"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/icon_orange_circle"/>
    <ImageView
        android:id="@+id/maf_Fig"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/O2Back_Fig"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="48dp"
        android:src="@drawable/icon_maf"/>
    <TextView
        android:id="@+id/maf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/O2Back_Fig"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:text="MAF: "
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/mafTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maf"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="170dp"
        android:text=""
        android:textColor="#9F5000"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maf"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="270dp"
        android:text="grams/sec"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp" />
